{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "lib": ["DOM", "ES2022", "ES2016.Array.Include"],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "target": "ES2022",
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
